<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AdminProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:backgroundTint="#e8e8e8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/logoutbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/baseline_power" />


        <Button
            android:id="@+id/modifyProfileButton"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/buttons"
            android:text="@string/modify_profile"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="178dp"
            android:layout_height="57dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="100dp"
            android:text="@string/profile"
            android:textAlignment="center"
            android:textColor="#040000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="#575151"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_below="@+id/nameText"
            android:layout_alignStart="@+id/viewCatBtn"
            android:layout_alignEnd="@+id/modifyProfileButton"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="#575151"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="101dp"
            android:background="@drawable/iconprofile" />

        <Button
            android:id="@+id/viewCatBtn"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="500dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/buttons"
            android:text="Categories"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/viewPaymentBtn"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="570dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/buttons"
            android:text="Payments"
            android:textColor="#FFFFFF" />

    </RelativeLayout> />
</androidx.core.widget.NestedScrollView>
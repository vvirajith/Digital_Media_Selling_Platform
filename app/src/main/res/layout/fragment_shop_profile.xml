<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ShopProfileFragment">


            <Button
                android:id="@+id/viewItemButton"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#F7F8FA"
                android:text="@string/view_items"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/addItemButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewCutomCatButton" />

            <Button
                android:id="@+id/viewCutomCatButton"
                android:layout_width="180dp"
                android:layout_height="60dp"

                android:layout_marginTop="31dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#F7F8FA"
                android:text="@string/view_my_categories"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/addCutomCatButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modifyProfileButton" />

            <Button
                android:id="@+id/addItemButton"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#F7F8FA"
                android:text="@string/add_item"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/viewItemButton"
                app:layout_constraintTop_toBottomOf="@+id/addCutomCatButton" />

            <Button
                android:id="@+id/addCutomCatButton"
                android:layout_width="180dp"
                android:layout_height="60dp"

                android:layout_marginTop="28dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#F7F8FA"
                android:text="@string/add_custom_category"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/viewCutomCatButton"
                app:layout_constraintTop_toBottomOf="@+id/modifyProfileButton" />

            <Button
                android:id="@+id/modifyProfileButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/buttons"
                android:text="@string/modify_profile"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                app:layout_constraintVertical_bias="0.042" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:backgroundTint="#e8e8e8"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/addCutomCatButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="218dp"
                    android:layout_height="69dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="94dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="99dp"
                    android:layout_marginRight="100dp"
                    android:text="@string/shop_profile"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layout01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                app:cardCornerRadius="100dp">


                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    tools:srcCompat="@tools:sample/avatars" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <EditText

                                    android:id="@+id/shopNameDisplay"
                                    android:layout_width="200dp"
                                    android:layout_height="53dp"
                                    android:ems="10"
                                    android:inputType="textPersonName"
                                    android:text="Shop Name"
                                    android:textAlignment="center"
                                    android:textColor="#575151"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    tools:layout_editor_absoluteX="140dp"
                                    tools:layout_editor_absoluteY="115dp" />

                                <LinearLayout
                                    android:id="@+id/layout02"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/shopNameDisplay"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/shopFNameDisplay"
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/shopNameDisplay"
                                        android:ems="10"
                                        android:inputType="textPersonName"
                                        android:text="nameFist"
                                        android:textColor="#575151"
                                        android:textSize="16sp"
                                        tools:layout_editor_absoluteX="132dp"
                                        tools:layout_editor_absoluteY="136dp" />

                                    <EditText
                                        android:id="@+id/shopSNameDisplay"
                                        android:layout_width="100dp"
                                        android:layout_height="53dp"
                                        android:layout_below="@+id/shopNameDisplay"
                                        android:ems="10"
                                        android:inputType="textPersonName"
                                        android:text="nameSec"
                                        android:textColor="#575151"
                                        android:textSize="16sp"
                                        tools:layout_editor_absoluteX="263dp"
                                        tools:layout_editor_absoluteY="136dp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <EditText
                        android:id="@+id/phoneNumberDisplay"
                        android:layout_width="150dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:text="+94-112136379"
                        android:textColor="#575151"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/shopEmailDisplay"
                            android:layout_width="200dp"
                            android:layout_height="53dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:text="shop01@gmal.com"
                            android:textColor="#575151"
                            android:textSize="16sp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="205dp" />

                        <EditText
                            android:id="@+id/salesNoDisplay"
                            android:layout_width="100dp"
                            android:layout_height="53dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:text="Sales: 102"
                            android:textColor="#575151"
                            android:textSize="16sp"
                            tools:layout_editor_absoluteX="261dp"
                            tools:layout_editor_absoluteY="175dp" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>



